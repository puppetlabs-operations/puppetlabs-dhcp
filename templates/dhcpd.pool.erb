#################################
# <%= @name %>
#################################
subnet <%= @network %> netmask <%= @mask %> {
  pool
  {
<% if @failover -%>
    failover peer "<%= @failover %>";
<% end -%>
<% @range.each do |r| -%>
    range <%= r %>;
<% end -%>
  }

  option subnet-mask <%= @mask %>;
  option routers <%= @gateway %>;
<% @options.to_a.each do |opt| -%>
  option <%= opt %>;
<% end -%>
<% @parameters.to_a.each do |param| -%>
  <%= param %>;
<% end -%>
<% if @special -%>
<%= @special %>
<% end -%>
}

